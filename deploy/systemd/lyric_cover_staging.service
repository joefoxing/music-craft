[Unit]
Description=Lyric Cover STAGING (Flask via Gunicorn)
After=network.target

[Service]
Type=simple
User=www-data
Group=www-data
WorkingDirectory=/opt/lyric_cover_staging
EnvironmentFile=/etc/lyric_cover_staging.env

ExecStart=/opt/lyric_cover_staging/.venv/bin/gunicorn --workers 3 --bind 127.0.0.1:8001 wsgi:app
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
