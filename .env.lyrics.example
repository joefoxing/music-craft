# Environment variables for lyrics extraction microservice

# ===== Service Configuration =====
LYRICS_SERVICE_NAME=lyrics-extraction-service
LYRICS_SERVICE_VERSION=1.0.0
LYRICS_API_PREFIX=/v1
LOG_LEVEL=INFO

# ===== Redis Configuration =====
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
# REDIS_PASSWORD=your_secure_password_here

# ===== Queue Configuration =====
LYRICS_QUEUE_NAME=lyrics_extraction
LYRICS_QUEUE_TIMEOUT=900
LYRICS_RESULT_TTL=3600

# ===== Upload Configuration =====
LYRICS_MAX_UPLOAD_SIZE_MB=50

# ===== Model Configuration =====
# Whisper model: tiny, base, small, medium, large-v2, large-v3, turbo
LYRICS_WHISPER_MODEL=large-v3

# Demucs model for vocal separation
LYRICS_DEMUCS_MODEL=htdemucs

# ===== Device Configuration =====
# Device: cpu or cuda
LYRICS_DEVICE=cpu

# Compute type:
#   CPU: int8, int8_float16, float32
#   GPU: float16, int8_float16
LYRICS_COMPUTE_TYPE=int8

# ===== Processing Configuration =====
LYRICS_ENABLE_SEPARATION=true
LYRICS_PREPROCESS_AUDIO=true
LYRICS_VAD_FILTER=true
LYRICS_BEAM_SIZE=5
LYRICS_TEMPERATURE=0.0

# ===== System Configuration =====
LYRICS_TEMP_DIR=/tmp/lyrics_extraction
LYRICS_MAX_CONCURRENT_JOBS=1
